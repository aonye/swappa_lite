extends layout

block content
  section.category-wrapper
    h1 #{title}

    form(method='POST' action='')
      div.form-group
        label(for='name') Category name:
        input#name.form-control(type='text', placeholder='e.g. Phone' name='name' value=(undefined===category ? '' : category.name), required='true')
      button.btn.btn-primary(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg