extends layout

block content
  section.brands-wrapper
    h1 #{title}

    form(method='POST' action='')
      div.form-group
        label(for='name') Brand Name:
        input#name.form-control(type='text', placeholder='e.g. Apple' name='name' value=(undefined===brand ? '' : brand.name), required='true')
      button.btn.btn-primary(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg