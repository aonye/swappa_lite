extends layout

block content
  section.section-wrapper

    h1 #{title}: #{category.name}

    if category_devices.length

      p #[strong ERROR: Delete these devices before attempting to remove this category.]

      div(style='margin-left:20px;margin-top:20px')

        h4 Devices:

        dl
        each device in category_devices
          dt
            a(href=`${device.url}`) #{device.name}

    else
      p Do you really want to delete this category?

      form.centered(method='POST' action='')
        div.form-group
          input#categoryid.form-control(type='hidden',name='categoryid', required='true', value=category._id )

        button.btn.btn-primary(type='submit') Delete